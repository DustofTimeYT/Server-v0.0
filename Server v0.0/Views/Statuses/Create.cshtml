@model Server_v0._0.Models.Status
@{
    ViewBag.Title = "Добавление статуса";
}
<form asp-action="create" asp-controller="statuses">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название состояния</label>
        <a style="color:red"> @Html.ValidationMessageFor(model => model.Title)</a>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>