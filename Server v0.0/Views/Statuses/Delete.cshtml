@model Server_v0._0.Models.Status
@{
    ViewBag.Title = "Удаление статуса";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Название состояния</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="statuses" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value=@Delete.DelStatus(@Model.IsDeleted) />
            </div>
        </form>
    </div>
</div>