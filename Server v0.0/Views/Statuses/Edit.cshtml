@model Server_v0._0.Models.Status
@{
    ViewBag.Title = "Редактирование статуса";
}
<form asp-action="edit" asp-controller="statuses" asp-route-id="@Model.StatusId">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название состояния</label>
        <a style="color:red"> @Html.ValidationMessageFor(model => model.Title)</a>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>