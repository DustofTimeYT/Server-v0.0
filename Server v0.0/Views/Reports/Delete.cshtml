@model Server_v0._0.Models.Report
@{
    ViewBag.Title = "Удаление статуса";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Дата</dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>Link</dt>
        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="reports" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value=@Delete.DelStatus(@Model.IsDeleted) />
            </div>
        </form>
    </div>
</div>