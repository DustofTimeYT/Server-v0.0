@model Server_v0._0.Models.Client
@{
    ViewBag.Title = "Удаление пользователя";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Электронная почта</dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
 
        <dt>Номер</dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="Clients" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value=@Delete.DelStatus(@Model.IsDeleted) />
            </div>
        </form>
    </div>
</div>